@model IEnumerable<Formulario_soporte.Models.Reporte>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaReporte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MantenimientoLogico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MantenimientoFisico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MantenimientoReemplazo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrabajoRealizado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEquipoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSucursalNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioResponsableNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioTecnicoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firma)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaReporte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MantenimientoLogico)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.MantenimientoFisico)
             </td>
             <td>
                @Html.DisplayFor(modelItem => item.MantenimientoReemplazo)
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrabajoRealizado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEquipoNavigation.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSucursalNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioResponsableNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioTecnicoNavigation.Nombre)
            </td>
                <td>
                    @if (item.Firma != null && item.Firma.Length > 0)
                    {
                        string imageBase64 = Convert.ToBase64String(item.Firma);
                        string imageSrc = $"data:image/png;base64,{imageBase64}";
                        <img src="@imageSrc" alt="Firma" style="max-width:120px; border:1px solid #ccc; border-radius:5px;" />
                    }
                    else
                    {
                        <span class="text-muted">Sin firma</span>
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdReporte">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdReporte">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdReporte">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
