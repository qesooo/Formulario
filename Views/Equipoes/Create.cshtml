@model Formulario_soporte.Models.Equipo

@{
    ViewData["Title"] = "Registrar equipo";
}

<h1>Registrar nuevo equipo</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" placeholder="Ej: Laptop, Impresora..." />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" placeholder="Ej: HP, Dell, Epson..." />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" placeholder="Ej: ProBook 450 G8..." />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Activo" class="control-label"></label>
                <input asp-for="Activo" class="form-control" placeholder="Código o número de activo..." />
                <span asp-validation-for="Activo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdUsuario" class="control-label">Responsable</label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario">
                    <option value="">-- Seleccione un responsable --</option>
                </select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>

            <div class="form-group text-end">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
