<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Formulario_soporte</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Formulario_soporte.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* Definición del color amarillo pastel para consistencia */
        :root {
            --pastel-yellow: #fcf8f3;
            --primary-blue: #4a90e2; /* Tono de azul de tus diseños */
        }

        body {
            background-color: var(--pastel-yellow);
            min-height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif; /* Consistencia en la tipografía */
        }

        /* Estilo para la barra de navegación (Header) */
        .app-navbar {
            background-color: var(--pastel-yellow) !important; /* Fondo amarillo pastel en la barra */
            border-bottom: none !important;
            box-shadow: none !important;
        }

        /* Estilo personalizado para el icono de inicio */
        .home-icon-link {
            font-size: 1.8rem;
            color: var(--primary-blue); /* Color azul primario */
            text-decoration: none;
            transition: color 0.2s ease-in-out;
        }

            .home-icon-link:hover {
                color: #357bd1;
            }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light app-navbar border-bottom box-shadow mb-3">
            <div class="container-fluid">

                @{
                    // Lógica para determinar la URL de inicio basada en el rol
                    var rol = Context.Session.GetString("rol");
                    string homeUrl = "/Login/Index"; // Opción por defecto para usuarios sin sesión

                    if (rol == "Administrador")
                    {
                        homeUrl = "/Home/AdminMenu";
                    }
                    else if (rol == "Técnico")
                    {
                        homeUrl = "/Home/TecnicoMenu";
                    }
                    else if (rol == "Solicitante")
                    {
                        homeUrl = "/Home/SolicitanteMenu";
                    }
                }

                <div class="d-flex align-items-center justify-content-start w-100">
                    
                    <a class="home-icon-link ms-5 me-3" href="@homeUrl" title="Volver al Inicio">
                        <i class="fas fa-home"></i>
                    </a>

                    <ul class="navbar-nav">
                        @if (rol == "Administrador")
                        {
                            <li class="nav-item"><a class="nav-link text-dark" href="/Home/AdminMenu">Panel Admin</a></li>
                        }
                        else if (rol == "Técnico")
                        {
                            <li class="nav-item"><a class="nav-link text-dark" href="/Home/TecnicoMenu">Panel Técnico</a></li>
                        }
                        else if (rol == "Solicitante")
                        {
                            <li class="nav-item"><a class="nav-link text-dark" href="/Home/SolicitanteMenu">Panel Solicitante</a></li>
                        }
                    </ul>
                </div>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Soporte - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>