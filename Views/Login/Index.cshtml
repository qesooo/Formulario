@{
    ViewData["Title"] = "Inicio de Sesión";
    Layout = null; // Usar Layout = null para evitar heredar estilos que puedan interferir.
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Formulario_soporte</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        /* ========================================================= */
        /* === ESTILOS CSS INCRUSTADOS (MOBILE-FIRST) === */
        /* ========================================================= */

        /* 1. Reset y Fuentes */
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            /* Fondo con las ondas del ejemplo: azul y blanco */
            background: linear-gradient(to bottom, #f0f4f8 50%, #d4e3f4 50%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Poppins', sans-serif;
        }

        /* 2. Estilos del Contenedor y Tarjeta (Mobile) */

        .login-container {
            width: 100%;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1); /* Sombra suave */
            width: 100%;
            max-width: 380px; /* Ancho ajustado para mejor estética */
            text-align: center;
            position: relative;
            margin-top: 50px;
        }

        /* 3. Ícono de Usuario (El Círculo Azul) */
        .login-icon {
            position: absolute;
            top: -45px;
            left: 50%;
            transform: translateX(-50%);
            width: 90px;
            height: 90px;
            background-color: #3b82f6; /* Azul primario */
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        /* 4. Título y Formulario */
        .login-title {
            margin-bottom: 25px;
            color: #333;
            font-size: 1.5rem;
            font-weight: 600;
            margin-top: 50px;
        }

        .login-form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        /* 5. Campos de Entrada */
        .input-group {
            position: relative;
            display: flex;
            align-items: center;
        }

        .input-field {
            width: 100%;
            padding: 10px 10px 10px 45px; /* Espacio para el ícono */
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

            .input-field::placeholder {
                color: #aaa;
            }

            .input-field:focus {
                border-color: #3b82f6;
                outline: none;
                box-shadow: 0 0 5px rgba(59, 130, 246, 0.5);
            }

        .input-icon {
            position: absolute;
            left: 15px;
            color: #999;
            font-size: 1.1rem;
        }

        /* 6. Opciones Adicionales */
        .options-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.85rem;
            color: #555;
            margin-bottom: 5px;
        }

        .remember-me {
            display: flex;
            align-items: center;
        }

            .remember-me input[type="checkbox"] {
                margin-right: 5px;
            }

        .forgot-password, .register-link a {
            color: #3b82f6;
            text-decoration: none;
            transition: color 0.3s;
        }

            .forgot-password:hover, .register-link a:hover {
                color: #2563eb;
                text-decoration: underline;
            }

        /* 7. Botón de Ingresar */
        .login-button {
            background-color: #3b82f6;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
            text-transform: uppercase;
        }

            .login-button:hover {
                background-color: #2563eb;
            }

        /* 8. Mensaje de Error y Otros */
        .error-message {
            color: #e53e3e;
            margin-top: 10px;
            font-size: 0.9rem;
        }

        .register-link {
            margin-top: 20px;
            font-size: 0.9rem;
        }

        .sr-only { /* Etiquetas ocultas para accesibilidad */
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            border: 0;
        }

        /* 9. Media Query (Tablet/Desktop) */
        @@media (min-width: 768px) {
            .login-card

        {
            padding: 40px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15); /* Sombra más pronunciada */
        }

        .login-button {
            padding: 14px;
        }

        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-card">

            <div class="login-icon">
                <i class="fas fa-user"></i>
            </div>

            <h2 class="login-title">Inicio de Sesión</h2>

            <form method="post" class="login-form">

                <div class="input-group">
                    <i class="fas fa-user-alt input-icon"></i>
                    <label for="nombre" class="sr-only">Nombre de usuario:</label>
                    <input type="text" id="nombre" name="nombre" placeholder="Nombre de usuario" required class="input-field" />
                </div>

                <div class="input-group">
                    <i class="fas fa-lock input-icon"></i>
                    <label for="password" class="sr-only">Contraseña:</label>
                    <input type="password" id="password" name="password" placeholder="Contraseña" required class="input-field" />
                </div>

                <div class="options-row">
                    <label class="remember-me">
                        <input type="checkbox" name="rememberMe" /> Recordarme
                    </label>
                    
                </div>

                <button type="submit" class="login-button">INGRESAR</button>

                @if (ViewBag.Error != null)
                {
                    <p class="error-message">@ViewBag.Error</p>
                }
            </form>

        </div>
    </div>
</body>
</html>